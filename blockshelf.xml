<?xml version="1.0" encoding="UTF-8"?>
<project name="blockshelf" default="all">
  
  
  <property file="blockshelf.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_cglib:cglib-nodep:3.2.5.classpath">
    <pathelement location="${path.variable.maven_repository}/cglib/cglib-nodep/3.2.5/cglib-nodep-3.2.5.jar"/>
  </path>
  
  <path id="library.maven:_com.comphenix.executors:bukkitexecutors:1.1-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/com/comphenix/executors/BukkitExecutors/1.1-SNAPSHOT/BukkitExecutors-1.1-20170429.151522-2.jar"/>
  </path>
  
  <path id="library.maven:_com.comphenix.protocol:protocollib:4.5.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/comphenix/protocol/ProtocolLib/4.5.0/ProtocolLib-4.5.0.jar"/>
  </path>
  
  <path id="library.maven:_com.google.code.gson:gson:2.8.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.0/gson-2.8.0.jar"/>
  </path>
  
  <path id="library.maven:_com.google.guava:guava:21.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/guava/guava/21.0/guava-21.0.jar"/>
  </path>
  
  <path id="library.maven:_commons-lang:commons-lang:2.6.classpath">
    <pathelement location="${path.variable.maven_repository}/commons-lang/commons-lang/2.6/commons-lang-2.6.jar"/>
  </path>
  
  <path id="library.maven:_net.md-5:bungeecord-chat:1.15-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/net/md-5/bungeecord-chat/1.15-SNAPSHOT/bungeecord-chat-1.15-20200308.083356-60.jar"/>
  </path>
  
  <path id="library.maven:_org.spigotmc:spigot-api:1.15.2-r0.1-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/org/spigotmc/spigot-api/1.15.2-R0.1-SNAPSHOT/spigot-api-1.15.2-R0.1-20200308.084906-69.jar"/>
  </path>
  
  <path id="library.maven:_org.yaml:snakeyaml:1.25.classpath">
    <pathelement location="${path.variable.maven_repository}/org/yaml/snakeyaml/1.25/snakeyaml-1.25.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_blockshelf.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.blockshelf" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.blockshelf" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.blockshelf:jar" value="${basedir}/../../server/plugins"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.BlockShelf.jar" value="${artifacts.temp.dir}/BlockShelf.jar"/>
  </target>
  
  <target name="artifact.blockshelf:jar" depends="init.artifacts, compile.module.blockshelf" description="Build &#39;BlockShelf:jar&#39; artifact">
    <property name="artifact.temp.output.blockshelf:jar" value="${artifacts.temp.dir}/BlockShelf_jar"/>
    <mkdir dir="${artifact.temp.output.blockshelf:jar}"/>
    <jar destfile="${temp.jar.path.BlockShelf.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${blockshelf.output.dir}"/>
      <zipfileset src="${basedir}/../../_buildtools/spigot-1.15.2.jar"/>
      <zipfileset file="${basedir}/plugin.yml"/>
    </jar>
    <copy file="${temp.jar.path.BlockShelf.jar}" tofile="${artifact.temp.output.blockshelf:jar}/BlockShelf.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.blockshelf:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.blockshelf:jar}"/>
    <copy todir="${artifact.output.blockshelf:jar}">
      <fileset dir="${artifact.temp.output.blockshelf:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>