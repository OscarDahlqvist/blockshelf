<?xml version="1.0" encoding="UTF-8"?>
<project name="module_blockshelf" default="compile.module.blockshelf">
  <dirname property="module.blockshelf.basedir" file="${ant.file.module_blockshelf}"/>
  
  <property name="module.jdk.home.blockshelf" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.blockshelf" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.blockshelf" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.blockshelf" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="blockshelf.output.dir" value="${module.blockshelf.basedir}/target/classes"/>
  <property name="blockshelf.testoutput.dir" value="${module.blockshelf.basedir}/target/test-classes"/>
  
  <path id="blockshelf.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="blockshelf.module.production.classpath">
    <path refid="${module.jdk.classpath.blockshelf}"/>
    <pathelement location="${basedir}/../../_buildtools/spigot-1.15.2.jar"/>
    <path refid="library.maven:_com.comphenix.protocol:protocollib:4.5.0.classpath"/>
    <path refid="library.maven:_cglib:cglib-nodep:3.2.5.classpath"/>
    <path refid="library.maven:_com.comphenix.executors:bukkitexecutors:1.1-snapshot.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.15.2-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.15-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.25.classpath"/>
  </path>
  
  <path id="blockshelf.runtime.production.module.classpath">
    <pathelement location="${blockshelf.output.dir}"/>
    <pathelement location="${basedir}/../../_buildtools/spigot-1.15.2.jar"/>
    <path refid="library.maven:_com.comphenix.protocol:protocollib:4.5.0.classpath"/>
    <path refid="library.maven:_cglib:cglib-nodep:3.2.5.classpath"/>
    <path refid="library.maven:_com.comphenix.executors:bukkitexecutors:1.1-snapshot.classpath"/>
  </path>
  
  <path id="blockshelf.module.classpath">
    <path refid="${module.jdk.classpath.blockshelf}"/>
    <pathelement location="${blockshelf.output.dir}"/>
    <pathelement location="${basedir}/../../_buildtools/spigot-1.15.2.jar"/>
    <path refid="library.maven:_com.comphenix.protocol:protocollib:4.5.0.classpath"/>
    <path refid="library.maven:_cglib:cglib-nodep:3.2.5.classpath"/>
    <path refid="library.maven:_com.comphenix.executors:bukkitexecutors:1.1-snapshot.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.15.2-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.15-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.25.classpath"/>
  </path>
  
  <path id="blockshelf.runtime.module.classpath">
    <pathelement location="${blockshelf.testoutput.dir}"/>
    <pathelement location="${blockshelf.output.dir}"/>
    <pathelement location="${basedir}/../../_buildtools/spigot-1.15.2.jar"/>
    <path refid="library.maven:_com.comphenix.protocol:protocollib:4.5.0.classpath"/>
    <path refid="library.maven:_cglib:cglib-nodep:3.2.5.classpath"/>
    <path refid="library.maven:_com.comphenix.executors:bukkitexecutors:1.1-snapshot.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.15.2-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.0.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.15-snapshot.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.25.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.blockshelf">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.blockshelf">
    <patternset refid="excluded.from.module.blockshelf"/>
  </patternset>
  
  <path id="blockshelf.module.sourcepath">
    <dirset dir="${module.blockshelf.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="blockshelf.module.test.sourcepath">
    <dirset dir="${module.blockshelf.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.blockshelf" depends="compile.module.blockshelf.production,compile.module.blockshelf.tests" description="Compile module BlockShelf"/>
  
  <target name="compile.module.blockshelf.production" depends="register.custom.compilers" description="Compile module BlockShelf; production classes">
    <mkdir dir="${blockshelf.output.dir}"/>
    <javac2 destdir="${blockshelf.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.blockshelf}/javac">
      <compilerarg line="${compiler.args.blockshelf}"/>
      <bootclasspath refid="blockshelf.module.bootclasspath"/>
      <classpath refid="blockshelf.module.production.classpath"/>
      <src refid="blockshelf.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.blockshelf"/>
    </javac2>
    
    <copy todir="${blockshelf.output.dir}">
      <fileset dir="${module.blockshelf.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="/">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.blockshelf.tests" depends="register.custom.compilers,compile.module.blockshelf.production" description="compile module BlockShelf; test classes" unless="skip.tests">
    <mkdir dir="${blockshelf.testoutput.dir}"/>
    <javac2 destdir="${blockshelf.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.blockshelf}/javac">
      <compilerarg line="${compiler.args.blockshelf}"/>
      <bootclasspath refid="blockshelf.module.bootclasspath"/>
      <classpath refid="blockshelf.module.classpath"/>
      <src refid="blockshelf.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.blockshelf"/>
    </javac2>
    
    <copy todir="${blockshelf.testoutput.dir}">
      <fileset dir="${module.blockshelf.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.blockshelf" description="cleanup module">
    <delete dir="${blockshelf.output.dir}"/>
    <delete dir="${blockshelf.testoutput.dir}"/>
  </target>
</project>